<div class="row d-flex justify-content-center">
<div class="book d-flex flex-column mb-3 w-50">
    <div class="align-self-center">
      <h2 class="text-success fs-1">{{book_name}}</h2>
    </div>
    <div class="align-self-center">
        <h5>{{author}}</h5>
    </div>
    <div class="align-self-center">
        <h6>{{genres}}</h6>
    </div>
    <div class="align-self-center container">
        <img src="{{image}}" class="rounded mx-auto d-block" style="max-width: 50%" alt="book-image">
    </div>
    <div class="align-self-center">
      <br>
      <br>
      <p class="text-justify">
        {{description}}
      </p>
    </div>
    <br>
    <br>
    <br>
    <div class="align-self-center">
    <p>
      <a href="/addComment" class="btn btn-primary">Add Comment</a>
    </p>
    </div>
</div>
</div>