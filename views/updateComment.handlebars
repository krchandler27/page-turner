{{!-- Update existing Comment form --}}
<div>
  <div class="row d-flex justify-content-center">
    <div class="post d-flex flex-column mb-3 w-50">
      <div class="align-self-center">
        <h2 class="text-center text-success fs-1">Update Comment</h2>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-center">
    <form id="update-comment-form" class="form d-flex w-50">
      <div class="card-body">
        <input type="hidden" name="comment-id" id="comment-id" value="{{comment.id}}" data-id="{{comment.id}}"/>

        <div class="form-group">
          <label class="form-label" for="comment-body" style="font-weight: bold;" >Comment Body:</label>
          <textarea name="comment-body" class="form-input" id="comment-body" >{{comment.body}}</textarea>
        </div>

        <div class="form-group d-flex justify-content-center">
           <button id="comment-update" type="submit" class="btn btn-info me-3">Update Comment</button>
            <a href="/profile" type="button" id="" class="btn btn-danger ms-3">Cancel</a>
        </div>
      </div>
    </form>
  </div>
